{{< layout/base}}
  {{#title}}맞춤 추천 결과{{/title}}
  {{#body}}
  <section class="cg-hero">
    <div class="cg-container">
      <h1 class="cg-hero__title">당신의 취향에 맞춘 카페 추천</h1>
      <p class="cg-hero__desc">선호 태그: {{#prefs}}{{.}}{{^last}}, {{/last}}{{/prefs}}</p>
    </div>
  </section>
  <section class="cg-section">
    <div class="cg-container cg-grid cg-grid-3">
      {{#cafes}}
      <article class="cg-card">
        <img src="{{image}}" alt="{{name}}" style="width:100%;height:160px;object-fit:cover;border-radius:12px"/>
        <h3 class="mt-3" style="margin:0">{{name}}</h3>
        <div class="small mt-2">태그: {{tags}}</div>
        <div class="small mt-2">매칭 점수: <b>{{score}}</b></div>
        <a class="cg-btn cg-btn--primary mt-3" href="/cafes/{{id}}">자세히 보기</a>
      </article>
      {{/cafes}}
    </div>
  </section>
  {{/body}}
{{/ layout/base}}
