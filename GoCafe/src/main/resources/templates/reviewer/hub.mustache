{{< layout/base}}
  {{#title}}전문 리뷰어 허브{{/title}}
  {{#body}}
  <section class="cg-hero">
    <div class="cg-container">
      <h1 class="cg-hero__title">전문 리뷰어 허브</h1>
      <p class="cg-hero__desc">등급제, 활동 지표, 스폰서십 연결까지 한 곳에서.</p>
      <div>
        <a class="cg-btn cg-btn--accent" href="/reviewers/apply">리뷰어 지원하기</a>
        <a class="cg-btn cg-btn--ghost" href="/reviewers/rules">등급 규정 보기</a>
      </div>
    </div>
  </section>
  <section class="cg-section">
    <div class="cg-container">
      <h2 class="mb-4">이달의 상위 리뷰어</h2>
      <div class="cg-grid cg-grid-3">
        {{#topReviewers}}
        <div class="cg-card">
          <div style="display:flex;gap:12px;align-items:center;">
            <img src="{{avatar}}" alt="{{name}}" style="width:56px;height:56px;border-radius:14px;object-fit:cover"/>
            <div>
              <div style="font-weight:800">{{name}}</div>
              <div class="small">등급: <span class="cg-badge">{{tier}}</span></div>
            </div>
          </div>
          <div class="mt-4 small">전문 분야: {{expertise}}</div>
          <div class="mt-2 small">평균 평점: {{avgScore}} · 리뷰 {{reviewCount}}건</div>
          <a class="cg-btn cg-btn--primary mt-4" href="/reviewers/{{id}}">프로필 보기</a>
        </div>
        {{/topReviewers}}
      </div>
    </div>
  </section>
  <section class="cg-section" style="background:var(--bg-alt)">
    <div class="cg-container">
      <h2 class="mb-4">등급 제도</h2>
      <table class="cg-table">
        <thead><tr><th>등급</th><th>요건</th><th>혜택</th></tr></thead>
        <tbody>
          {{#tiers}}
          <tr>
            <td>{{name}}</td>
            <td>{{requirements}}</td>
            <td>{{benefits}}</td>
          </tr>
          {{/tiers}}
        </tbody>
      </table>
    </div>
  </section>
  {{/body}}
{{/ layout/base}}
