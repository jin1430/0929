{{> layout/header}}

<section class="cg-section">
    <div class="cg-container">
        <h1 style="margin:0;font-weight:800">내 미션</h1>
        <div class="mt-4">
            {{#myMissions}}
                <div class="cg-card mt-3">
                    <div class="small">상태: {{status}}</div>
                    {{#acceptedAt}}<div class="small">참여일: {{acceptedAt}}</div>{{/acceptedAt}}
                    {{#completedAt}}<div class="small">판정일: {{completedAt}}</div>{{/completedAt}}
                    {{#proofUrl}}<div class="small">증빙: <a href="{{proofUrl}}" target="_blank">{{proofUrl}}</a></div>{{/proofUrl}}
                    {{#note}}<div class="small">메모: {{note}}</div>{{/note}}
                </div>
            {{/myMissions}}
            {{^myMissions}}
                <div class="small">참여한 미션이 없습니다.</div>
            {{/myMissions}}
        </div>
    </div>
</section>

{{> layout/footer}}
