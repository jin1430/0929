{{> layout/header}}

<section class="cg-section">
    <div class="cg-container">
        <div class="cg-card">
            <h1 style="margin:0;font-weight:800">{{mission.title}}</h1>
            {{#mission.cafeId}}<div class="small mt-2">카페 ID: {{mission.cafeId}}</div>{{/mission.cafeId}}
            <div class="small mt-2">마감일: {{mission.dueDate}}</div>
            {{#mission.sponsoredYn}}<div class="small mt-2">스폰서: {{mission.sponsoredYn}}</div>{{/mission.sponsoredYn}}
            <p class="mt-3">{{mission.description}}</p>

            {{#applied}}
                <div class="cg-badge mt-3">미션 참여 완료</div>
            {{/applied}}

            {{^applied}}
                <form class="mt-4" method="post" action="/missions/{{mission.id}}/apply">
                    <button class="cg-btn cg-btn--primary" type="submit">미션 수락</button>
                </form>
            {{/applied}}

            <hr class="mt-6"/>

            <h3 class="mt-4" style="margin:0;font-weight:800">완료 증명 업로드</h3>
            <form class="mt-3" method="post" action="/missions/{{mission.id}}/proof">
                <input class="cg-input" type="text" name="proofUrl" placeholder="사진/영상 URL(옵션)"/>
                <input class="cg-input" type="text" name="note" placeholder="후기 메모(옵션)"/>
                <button class="cg-btn" type="submit">제출</button>
            </form>
        </div>
    </div>
</section>

{{> layout/footer}}
