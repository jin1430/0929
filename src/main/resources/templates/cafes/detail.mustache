{{>layout/header}}
<link rel="stylesheet" href="/css/detail.css">

<main class="max-w-7xl mx-auto px-6 py-8" {{#cafe}}data-cafe-id="{{id}}"{{/cafe}}>
    <section class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8 fade-in">
        <div class="image-gallery p-4">
        </div>

        <div class="p-8">
            <div class="flex items-start justify-between mb-6">
                <div class="min-w-0">
                    <h1 class="text-3xl font-bold text-gray-800 mb-1 truncate">{{#cafe}}{{name}}{{/cafe}}</h1>
                    <p class="text-gray-600 mb-4 break-words">
                        {{#cafeInfoExists}}{{cafeEntityInfo}}{{/cafeInfoExists}}{{^cafeInfoExists}}자연 친화적인 분위기의 스페셜티 카페{{/cafeInfoExists}}
                    </p>
                </div>
            </div>

            <div class="grid md:grid-cols-3 gap-6">
                <div class="md:col-span-2 grid grid-cols-2 gap-6">
                    <div class="bg-green-50 p-4 rounded-xl">
                        <h3 class="font-semibold text-green-800 mb-2">📍 위치</h3>
                        <p class="text-gray-700 break-words">{{#cafe}}{{address}}{{/cafe}}</p>
                        {{#cafeInfoExists}}{{#cafeNotice}}<p class="text-sm text-gray-500 mt-1 break-words">{{cafeNotice}}</p>{{/cafeNotice}}{{/cafeInfoExists}}
                    </div>

                    <div class="bg-green-50 p-4 rounded-xl">
                        <h3 class="font-semibold text-green-800 mb-2">⏰ 영업시간</h3>
                        {{#cafeInfoExists}}
                            <p class="text-gray-700">오픈: {{cafeOpenTime}}</p>
                            <p class="text-gray-700">마감: {{cafeCloseTime}}</p>
                            {{#cafeHoliday}}<p class="text-sm text-gray-500">휴무: {{cafeHoliday}}</p>{{/cafeHoliday}}
                        {{/cafeInfoExists}}
                        {{^cafeInfoExists}}
                            <p class="text-gray-500">영업정보가 아직 없어요.</p>
                        {{/cafeInfoExists}}
                    </div>

                    <div class="bg-green-50 p-4 rounded-xl col-span-2">
                        <h3 class="font-semibold text-green-800 mb-2">📞 연락처</h3>
                        <p class="text-gray-700">{{#cafe}}{{phoneNumber}}{{/cafe}}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white rounded-2xl shadow-lg mb-8 fade-in">
    </section>

    {{#isOwner}}
        <dialog id="ownerModal" class="rounded-2xl p-0 w-full max-w-3xl shadow-xl border">
            <div class="p-6 max-h-[60vh] overflow-y-auto">
                <section id="owner-tab-info" class="owner-tab-panel">
                    <form id="cafeInfoForm" method="post" action="/cafes/{{#cafe}}{{id}}{{/cafe}}/info">
                        {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <label class="block md:col-span-2"><span class="text-sm text-gray-700">한줄 소개 (500자 이내)</span>
                                <input name="cafeInfo" maxlength="500" class="mt-1 w-full border rounded-lg px-3 py-2" value="{{#cafeInfoExists}}{{cafeEntityInfo}}{{/cafeInfoExists}}" placeholder="예: 자연 친화적인 분위기의 스페셜티 카페">
                            </label>
                            <label class="block"><span class="text-sm text-gray-700">오픈 시간</span>
                                <input name="cafeOpenTime" maxlength="7" class="mt-1 w-full border rounded-lg px-3 py-2" value="{{#cafeInfoExists}}{{cafeOpenTime}}{{/cafeInfoExists}}" placeholder="예: 09:00">
                            </label>
                            <label class="block"><span class="text-sm text-gray-700">마감 시간</span>
                                <input name="cafeCloseTime" maxlength="7" class="mt-1 w-full border rounded-lg px-3 py-2" value="{{#cafeInfoExists}}{{cafeCloseTime}}{{/cafeInfoExists}}" placeholder="예: 22:00">
                            </label>
                            <label class="block md:col-span-2"><span class="text-sm text-gray-700">휴무일</span>
                                <input name="cafeHoliday" maxlength="20" class="mt-1 w-full border rounded-lg px-3 py-2" value="{{#cafeInfoExists}}{{cafeHoliday}}{{/cafeInfoExists}}" placeholder="예: 매주 화요일">
                            </label>
                        </div>
                        <div class="mt-6 flex justify-end gap-3">
                            <button type="button" class="px-4 py-2 rounded-lg border" id="ownerModalCancelBtn">취소</button>
                            <button type="submit" class="px-5 py-2 rounded-lg bg-green-600 text-white hover:bg-green-700">정보 저장</button>
                        </div>
                    </form>
                </section>
            </div>
        </dialog>
    {{/isOwner}}


<script defer src="/js/detail.js"></script>
<script>
    // thumb-fallback가 많으면 4장만 보여주기 (서버 제한 없을 때)
    document.addEventListener('DOMContentLoaded', () => {
      const thumbs = Array.from(document.querySelectorAll('.thumb-fallback'));
      thumbs.slice(4).forEach(el => el.remove());
    });
     document.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.cg-onboarding')?.classList.add('hidden');
  });
</script>

{{>layout/footer}}