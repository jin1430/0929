{{>layout/header}}

<main class="cg-container cafe-create">
    <section class="cc-hero">
        <h1 class="cc-title">카페 정보 수정</h1>
        <p class="cc-sub">'{{cafe.name}}'의 정보를 수정합니다.</p>
    </section>

    <form class="cc-form" method="post" action="/cafes/{{cafe.id}}/edit">
        {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}

        <section class="cc-card">
            <header class="cc-card__head">
                <h2 class="cc-card__title">기본 정보 수정</h2>
            </header>

            <div class="cc-grid-2">
                <label class="cc-field">
                    <span class="cc-label">카페명 <span class="req">*</span></span>
                    <input name="name" maxlength="10" required class="cc-input" value="{{cafe.name}}">
                </label>
                <label class="cc-field">
                    <span class="cc-label">전화번호 <span class="req">*</span></span>
                    <input name="phoneNumber" maxlength="15" class="cc-input" value="{{cafe.phoneNumber}}" required>
                </label>
            </div>

            <label class="cc-field">
                <span class="cc-label">주소 <span class="req">*</span></span>
                <input name="address" maxlength="60" required class="cc-input" value="{{cafe.address}}">
            </label>

            <div class="cc-grid-2">
                <label class="cc-field">
                    <span class="cc-label">위도 (lat) <span class="req">*</span></span>
                    <input name="lat" type="number" step="0.000001" class="cc-input" value="{{cafe.lat}}" required>
                </label>
                <label class="cc-field">
                    <span class="cc-label">경도 (lon) <span class="req">*</span></span>
                    <input name="lon" type="number" step="0.000001" class="cc-input" value="{{cafe.lon}}" required>
                </label>
            </div>
        </section>

        <section class="cc-card">
            <header class="cc-card__head">
                <h2 class="cc-card__title">사업자 정보 수정</h2>
            </header>
            <div class="cc-grid-2">
                <label class="cc-field">
                    <span class="cc-label">사업자 코드 <span class="req">*</span></span>
                    <input name="businessCode" maxlength="10" class="cc-input" value="{{cafe.businessCode}}" required>
                </label>
                <label class="cc-field">
                    <span class="cc-label">개업일 <span class="req">*</span></span>
                    <input name="creationDate" type="date" class="cc-input" value="{{cafe.creationDate}}" required>
                </label>
            </div>
        </section>

        <div class="cc-actions">
            <a href="/cafes/{{cafe.id}}" class="cg-btn-outline cc-btn">취소</a>
            <button type="submit" class="cg-btn cc-btn--primary">수정 완료</button>
        </div>
    </form>
</main>

{{>layout/footer}}

