{{< layout/base}}
    {{#title}}미션 제출 심사{{/title}}
    {{#body}}
        <section class="cg-section">
            <div class="cg-container">
                <h1 style="margin:0;font-weight:800">미션 제출 심사</h1>
                <div class="mt-4">
                    {{#submissions}}
                        <div class="cg-card mt-3">
                            <div class="flex items-start justify-between">
                                <div>
                                    <div class="font-bold">[{{missionId}}] {{missionTitle}}</div>
                                    <div class="small text-gray-500">회원: {{memberEmail}} · 카페ID: {{cafeId}}</div>
                                    {{#proofUrl}}<div class="small mt-1">증빙: <a href="{{proofUrl}}" target="_blank">{{proofUrl}}</a></div>{{/proofUrl}}
                                    {{#note}}<div class="small mt-1">메모: {{note}}</div>{{/note}}
                                    <div class="small mt-1">제출시각: {{submittedAt}}</div>
                                </div>
                                <div class="flex gap-2">
                                    <form method="post" action="/admin/missions/review/{{notifId}}/good">
                                        <button class="cg-btn cg-btn--primary-sm">GOOD 승인</button>
                                    </form>
                                    <form method="post" action="/admin/missions/review/{{notifId}}/bad">
                                        <input class="cg-input" name="reason" placeholder="반려 사유(선택)" />
                                        <button class="cg-btn cg-btn--danger-sm">BAD 반려</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/submissions}}
                    {{^submissions}}<div class="small">심사할 제출물이 없습니다.</div>{{/submissions}}
                </div>
            </div>
        </section>
    {{/body}}
{{/ layout/base}}
