{{>layout/header}}

<main class="cg-container">
    <div class="cg-mypage-grid" id="me-layout">
        <!-- 좌측 내비 재사용 -->
        <aside>
            <nav class="cg-sidenav">
                <a href="/member/me" class="{{#nav_me}}is-active{{/nav_me}}">내 정보</a>
                <a href="/member/edit" class="{{#nav_edit}}is-active{{/nav_edit}}">내 정보 수정</a>
                <a href="/member/reviews" class="{{#nav_reviews}}is-active{{/nav_reviews}}">내가 쓴 리뷰</a>
                <a href="/member/favorites" class="{{#nav_favorites}}is-active{{/nav_favorites}}">즐겨찾기 목록 확인</a>
                <a href="/member/needs" class="{{#nav_prefs}}is-active{{/nav_prefs}}">나의 취향</a>
                <a href="/member/withdraw" class="is-danger {{#nav_withdraw}}is-active{{/nav_withdraw}}">회원 탈퇴</a>
            </nav>
        </aside>

        <section>
            <article class="cg-panel">
                <header class="cg-panel__head">
                    <div>
                        <h2 class="cg-panel__title">나의 취향</h2>
                    </div>

                </header>

                <div class="cg-panel__body">
                    {{#hasProfile}}
                        <div class="cg-head-actions">
                            <a class="cg-btn-outline" href="/member/select/needs/">선택 다시하기</a>
                        </div>

                        <div class="cg-profile" style="align-items:flex-start">
                            <div>
                                <div class="cg-badges" style="margin-bottom:8px">
                                    <span class="cg-badge">{{myTitle}}</span>
                                </div>
                                <p class="cg-note">{{myDescription}}</p>
                            </div>
                        </div>

                        <div class="cg-divider"></div>

                        <h3 class="cg-panel__title" style="margin-bottom:10px">내가 선택한 니즈</h3>

                        {{#needs}}
                            <div class="cg-list-row" style="display:flex;align-items:center;gap:10px;padding:8px 0;border-bottom:1px solid #eee">
                                <span class="cg-badge">{{tag}}</span>
                            </div>
                        {{/needs}}
                        {{^needs}}
                            <div class="cg-note">선택한 니즈가 없습니다.</div>
                        {{/needs}}
                    {{/hasProfile}}

                    {{^hasProfile}}
                        <div class="cg-notice-panel">
                            아직 니즈 프로필이 없습니다. <a href="/member/select/needs/" class="cg-btn-outline"
                                                style="margin-left:8px">나의 취향 선택하기</a>
                        </div>
                    {{/hasProfile}}
                </div>
            </article>
        </section>
    </div>
</main>

{{>layout/footer}}
